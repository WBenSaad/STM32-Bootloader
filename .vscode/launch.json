    "version": "0.2.0",
    "configurations": [
    {   
        "name": "Cortex Debug",
        "cwd": "${workspaceRoot}",
        "executable": "./MainApp/build/Main_App.elf",
        "request": "launch",
        //"interface": "swd",
        "type": "cortex-debug",
        "showDevDebugOutput": false,
        "servertype": "openocd",
        "device":"STM32F103C8T6",
        "gdbpath": "C:/Program Files (x86)/GNU Arm Embedded Toolchain/10 2020-q4-major/bin/arm-none-eabi-gdb.exe",
        "configFiles": [
            "C:/src/OpenOCD-20210729-0.11.0/share/openocd/scripts/interface/st.cfg",
            "C:/src/OpenOCD-20210729-0.11.0/share/openocd/scripts/target/stm32f1x.cfg"
        ]

    },
        {
            "name": "(gdb) Lancer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/MainApp/build/Main_App.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Program Files (x86)/GNU Arm Embedded Toolchain/10 2020-q4-major/bin/arm-none-eabi-gdb.exe",
            "setupCommands": [
                {
                    "description": "Activer l'impression en mode Pretty pour gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "STlink launch",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/MainApp/build/Main_App.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "stutil",
            "device": "STM32F10x",
            "interface": "swd",
            // "preLaunchCommands": ["Build all"], // you can execute command instead of task
            "svdFile": "", // Include svd to watch device peripherals
            "swoConfig": {} // currently (v1.7.0) not supported
        },
        {
            "name": "STlink attach",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/Bootloader/build/Bootloader.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "stutil",
            "device": "STM32F10x",
            "interface": "swd",
            // "preLaunchCommands": ["Build all"], // you can execute command instead of task
            "svdFile": "", // Include svd to watch device peripherals
            "swoConfig": {} // currently (v1.7.0) not supported
        },
    ]
